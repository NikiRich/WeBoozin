@page
@model WeBoozin.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Registration</h2>
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="NewUser.Name">Name:</label>
                        <input asp-for="NewUser.Name" class="form-control" />
                        <span asp-validation-for="NewUser.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewUser.Surname">Surname:</label>
                        <input asp-for="NewUser.Surname" class="form-control" />
                        <span asp-validation-for="NewUser.Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewUser.Username">Username:</label>
                    <input asp-for="NewUser.Username" class="form-control" />
                    <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewUser.Email">Email:</label>
                    <input asp-for="NewUser.Email" class="form-control" type="email" />
                    <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="NewUser.Password">Password:</label>
                        <input asp-for="NewUser.Password" class="form-control" type="password" />
                        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="NewUser.ConfirmPassword">Confirm Password:</label>
                        <input asp-for="NewUser.ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewUser.Telephone">Telephone:</label>
                    <input asp-for="NewUser.Telephone" class="form-control" />
                    <span asp-validation-for="NewUser.Telephone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewUser.Address">Address:</label>
                    <input asp-for="NewUser.Address" class="form-control" />
                    <span asp-validation-for="NewUser.Address" class="text-danger"></span>
                </div>
                <div class="text-center mt-1">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>