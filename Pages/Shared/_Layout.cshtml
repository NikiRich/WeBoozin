<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeBoozin</title>
    <link rel="stylesheet" href="~/WeBoozin.styles.css" asp-append-version="true" />
    <link href="/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/_Layout.css" />
    <script src="/lib/bootstrap/js/bootstrap.bundle.js"></script>
</head>

<body>
    <header>
        <nav class="navbar bg-primary">
            <ul>
                <li>
                    <a asp-area="" asp-page="/Categories">Categories</a>
                    <a asp-area="" asp-page="/AboutUs">About Us</a>
                </li>
            </ul>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>