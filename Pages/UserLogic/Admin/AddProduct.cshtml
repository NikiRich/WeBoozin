@page
@model WeBoozin.Pages.UserLogic.Admin.AddProductModel

<h3 class="text-center">Addition of New Alcohol Product</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}
<form method="post" class="mb-5">
    <div class="text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.ProductName">Product Name</label>
                <input asp-for="NewProduct.ProductName" class="form-control" />
                <span asp-validation-for="NewProduct.ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.CategoryId">Category</label>
                <select asp-for="NewProduct.CategoryId" asp-items="@Model.CategoryOptions" class="form-control text-center"></select>
                <span asp-validation-for="NewProduct.CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.Image">Image URL</label>
                <input asp-for="NewProduct.Image" class="form-control" />
                <span asp-validation-for="NewProduct.Image" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.QuantityInStock">Quantity</label>
                <input asp-for="NewProduct.QuantityInStock" type="number" class="form-control" />
                <span asp-validation-for="NewProduct.QuantityInStock" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.QuantityInMl">Quantity (ml)</label>
                <input asp-for="NewProduct.QuantityInMl" type="number" class="form-control" />
                <span asp-validation-for="NewProduct.QuantityInMl" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.AlcoholContent">Alcohol Content (%)</label>
                <input asp-for="NewProduct.AlcoholContent" type="number" step="0.1" class="form-control" />
                <span asp-validation-for="NewProduct.AlcoholContent" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-sm-3 mx-auto">
                <label asp-for="NewProduct.Description">Description</label>
                <textarea asp-for="NewProduct.Description" class="form-control"></textarea>
                <span asp-validation-for="NewProduct.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-success">Add Item</button>
            <button type="button" class="btn btn-danger ms-1" onclick="window.location.href='@Url.Page("/UserLogic/Admin/AddProduct")'">Clear Form</button>
            <button type="button" class="btn btn-warning ms-1" onclick="window.history.back();">Back</button>
        </div>
    </div>
</form>
