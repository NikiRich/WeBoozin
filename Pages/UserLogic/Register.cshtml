@page
@using System.Security.Claims
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (TempData["Invalid"] != null)
{
    <div class="alert alert-danger text-center">@TempData["Invalid"]</div>
}

<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Registration</h2>
            <form method="post">
                <div class="row">
                    <div class="col-md-5 text-center">
                        <label asp-for="NewUser.Name">Name:</label>
                        <input asp-for="NewUser.Name" class="form-control" placeholder="Enter name" />
                        <span asp-validation-for="NewUser.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-5 text-center">
                        <label asp-for="NewUser.Surname">Surname:</label>
                        <input asp-for="NewUser.Surname" class="form-control" placeholder="Enter surname" />
                        <span asp-validation-for="NewUser.Surname" class="text-danger"></span>
                    </div>
                    <div class="col-md-2 text-center">
                        <label asp-for="NewUser.Age">Age:</label>
                        <input asp-for="NewUser.Age" class="form-control" placeholder="Age" />
                        <span asp-validation-for="NewUser.Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewUser.Username">Username:</label>
                    <input asp-for="NewUser.Username" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="NewUser.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewUser.Email">Email:</label>
                    <input asp-for="NewUser.Email" class="form-control" type="email" placeholder="Enter email" />
                    <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="form-group col-md-6 text-center">
                        <label asp-for="NewUser.Password">Password:</label>
                        <input asp-for="NewUser.Password" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6 text-center">
                        <label asp-for="NewUser.ConfirmPassword">Confirm Password:</label>
                        <input asp-for="NewUser.ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                        <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewUser.Telephone">Telephone:</label>
                    <input asp-for="NewUser.Telephone" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="NewUser.Telephone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewUser.Address">Address:</label>
                    <input asp-for="NewUser.Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="NewUser.Address" class="text-danger"></span>
                </div>
                <div class="text-center mt-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                    @if (User.Identity.IsAuthenticated && User.HasClaim(ClaimTypes.Role, "Admin"))
                    {
                        <button type="reset" class="btn btn-danger" onclick="window.location.href='@Url.Page("/UserLogic/Register")'">Clear</button>
                        <button type="button" class="btn btn-warning ms-1" onclick="location.href='@Url.Page("/UserLogic/Admin/UserManagement")'">Back to User Management</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
