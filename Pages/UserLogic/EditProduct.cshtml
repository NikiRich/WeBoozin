@page "{id:int}"
@model WeBoozin.Pages.UserLogic.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <div class="form-group">
        <label asp-for="Product.ProductName">Name</label>
        <input asp-for="Product.ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.CategoryId">Category</label>
        <select asp-for="Product.CategoryId" asp-items="Model.CategoryOptions" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description">Description</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Product.Image">Image URL</label>
        <input asp-for="Product.Image" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.QuantityInStock">Quantity</label>
        <input asp-for="Product.QuantityInStock" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.AlcoholContent">Alcohol Content (%)</label>
        <input asp-for="Product.AlcoholContent" type="number" step="0.1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.QuantityInMl">Quantity (ml)</label>
        <input asp-for="Product.QuantityInMl" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="/UserLogic/Admin/ProductManagement" class="btn btn-danger">Cancel</a>
</form>
